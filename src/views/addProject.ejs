<div class="container mt-5">
    <h1 class="mb-4 header text-center">Create Project</h1>
    <div class="card ">
        <div class="card-body">
            <form action="/createProject" method="post">
                <div class="form-group my-4 d-flex justify-content-center">
                    <div class="input-group w-25">
                        <input type="text" class="form-control border border-2 border-dark py-2" name="name" placeholder="Project Name" required>
                    </div>
                </div>
                <div class="form-group my-4 d-flex justify-content-center">
                    <div class="input-group w-25">
                        <textarea class="form-control border border-2 border-dark" name ="description" placeholder="Project Description..." rows="2" required></textarea>
                    </div>
                </div>
                <div class="form-group my-4 d-flex justify-content-center">
                    <div class="input-group w-25">
                        <input type="text" class="form-control border border-2 border-dark" name ="author" placeholder="Author Name" required>
                    </div>
                </div>
                <div class="text-center">
                    <button type="submit" class="btn btn-primary w-20">Create</button>
                </div>
            </form>
        </div>
    </div>
</div>
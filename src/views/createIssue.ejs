<div class="container mt-5">
    <h1 class="mb-4 header text-center">Create Issue Page</h1>
    <div class="card ">
        <div class="card-body">
            <form action="/createIssue/<%= project._id %>" method="post">
                <div class="my-4 text-center">
                    <h4>Project : <span class="text-primary"><%=project.name %></span></h4>
                </div>
                <div class="form-group my-4 d-flex justify-content-center">
                    <div class="input-group w-25">
                        <input type="text" class="form-control border border-2 border-dark py-2" name="title" placeholder="Issue Title" required>
                    </div>
                </div>
                <div class="form-group my-4 d-flex justify-content-center">
                    <div class="input-group w-25">
                        <input type="text" class="form-control border border-2 border-dark py-2" name="description" placeholder="Issue Description" required>
                    </div>
                </div>
                <div class="form-group my-4 d-flex justify-content-center">
                    <div class="input-group w-25">
                        <span class="mx-3"><strong>Label : </strong></span>
                        <select name="labels" id="inputState" class="form-control form-select">
                            <option selected>Bug</option>
                            <option>Type Error</option>
                            <option>Syntax Error</option>
                            <option>Line Missing</option>
                        </select>
                    </div>
                </div>
                <div class="form-group my-4 d-flex justify-content-center">
                    <div class="input-group w-25">
                        <input type="text" class="form-control border border-2 border-dark" name ="author" placeholder="Author Name" required>
                    </div>
                </div>
                <div class="text-center">
                    <button type="submit" class="btn btn-primary w-20">Create</button>
                </div>
            </form>
        </div>
    </div>
</div>